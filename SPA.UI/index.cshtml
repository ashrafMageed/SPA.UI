<head>
    <meta charset="utf-8" />

    <!-- Mobile viewport optimized: h5bp.com/viewport -->
    <meta name="viewport" content="width=device-width">
    <title>Code Camper</title>
    
@*    @Styles.Render("~/Content/css", "~/Content/less")*@
    
    <!-- All JavaScript at the bottom, except this Modernizr build.
       Modernizr enables HTML5 elements & feature detects for optimal performance.
       Create your own custom Modernizr build: www.modernizr.com/download/ -->
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="busyindicator"></div>
    <header>
        <h1>SPA</h1>
        
        <nav id="shellTop-view" class="main-nav">
            <ul data-bind="with: menuHashes">
                <li class="route-top"><a data-bind="attr: {href: products}">Products</a></li>
                <li class="route-top"><a data-bind="attr: {href: booking}">Booking</a></li>
            </ul>
        </nav>
    </header>
    
   
    <!--
    When bundling, load in this sequence:
    1) shivs and jQuery
    2) 3rd party libraries
    3) require.js
    4) your app libraries
    5) main.js 
    -->
    @Scripts.Render(
        "~/bundles/jquery", 
        "~/bundles/libs",
        "~/Scripts/require.js",
        "~/bundles/jsapplibs",
        "~/Scripts/main.js")
    
   @Scripts.Render("~/bundles/mocks") 
    
    <section class="main">
        <section id="filter">
            <label>Filter: </label>
            <input id="filterInput" data-bind="value: products().filterText, valueUpdate: 'afterkeydown'"  placeholder="Filter products" />
        </section>
        @RenderPage("Views/products.cshtml")
        @RenderPage("Views/productView.cshtml")
        @RenderPage("Views/Booking.cshtml")
    </section>

</body>
</html>