    </section>
    <section id="payment" class="booking-steps"></section>
</section>

<section>
    @RenderPage("TourOverview.cshtml")
    @RenderPage("PassengerDetails.cshtml")
    @RenderPage("Payment.cshtml")
</section>

<section class="price-breakdown">
    <section class="view-detail" data-bind="template: {name: 'priceBreakdown.view'}"></section>
</section>

